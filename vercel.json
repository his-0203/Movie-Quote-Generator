{
  "version": 2,
  "builds": [
    {
      "src": "ads.txt",
      "use": "@vercel/static"
    },
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/ads.txt",
      "dest": "/ads.txt"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    },
    {
      "src": "/api/proxy",
      "dest": "/api/proxy.js"
    }
  ],
  
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  }
}